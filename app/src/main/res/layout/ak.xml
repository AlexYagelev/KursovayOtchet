<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity_type_2_sosudi1"
    tools:ignore="MissingDefaultResource"
    android:paddingBottom="0dp"
   >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#0079C2"

            android:gravity="center"
            app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Body1"
            app:title="Общие сведения"
            app:titleMargin="16dp"
            app:titleTextColor="#FFFFFF"
            tools:layout_gravity="center"
            tools:title_gravity="center">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?actionBarSize"
        android:isScrollContainer="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:padding="16dp">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"

                        android:gravity="center"
                        android:text="Эксплуатирующее общество" />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"

                        android:completionThreshold="1"
                        android:hint="Введите текст"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/textView15"
                        app:layout_constraintTop_toBottomOf="@+id/toolbar" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text="Подразделение заказщика"
                        app:layout_constraintTop_toBottomOf="@+id/textView15"
                        tools:layout_editor_absoluteX="0dp" />

                    <Spinner
                        android:id="@+id/spinner8"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="50"

                        android:dropDownWidth="wrap_content"
                        android:dropDownHeight="500dp"
                        android:minWidth="400dp"
                        android:popupWindowStyle="@style/CustomPopupWindow"
                        android:spinnerDropDownItemStyle="@style/SpinnerItemStyle"

                        android:spinnerMode="dialog"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView"
                        app:layout_constraintVertical_bias="0.098" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text="Наименование объекта"
                        app:layout_constraintTop_toBottomOf="@+id/textView15"
                        tools:layout_editor_absoluteX="0dp" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="50"

                        android:dropDownWidth="wrap_content"
                        android:dropDownHeight="500dp"
                        android:minWidth="400dp"
                        android:popupWindowStyle="@style/CustomPopupWindow"
                        android:spinnerDropDownItemStyle="@style/SpinnerItemStyle"

                        android:spinnerMode="dialog"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView"
                        app:layout_constraintVertical_bias="0.098" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text="Вид работ"
                        app:layout_constraintTop_toBottomOf="@+id/textView15"
                        tools:layout_editor_absoluteX="0dp" />

                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="50"

                        android:dropDownWidth="wrap_content"
                        android:dropDownHeight="500dp"
                        android:minWidth="400dp"
                        android:popupWindowStyle="@style/CustomPopupWindow"
                        android:spinnerDropDownItemStyle="@style/SpinnerItemStyle"

                        android:spinnerMode="dialog"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView"
                        app:layout_constraintVertical_bias="0.098" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text="Содержание работ"
                        app:layout_constraintTop_toBottomOf="@+id/textView15"
                        tools:layout_editor_absoluteX="0dp" />

                    <Spinner
                        android:id="@+id/spinner4"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="50"

                        android:dropDownWidth="wrap_content"
                        android:dropDownHeight="500dp"
                        android:minWidth="400dp"
                        android:popupWindowStyle="@style/CustomPopupWindow"
                        android:spinnerDropDownItemStyle="@style/SpinnerItemStyle"

                        android:spinnerMode="dialog"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView"
                        app:layout_constraintVertical_bias="0.098" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text="Краткие Т/Х"
                        app:layout_constraintTop_toBottomOf="@+id/textView15"
                        tools:layout_editor_absoluteX="0dp" />

                    <Spinner
                        android:id="@+id/spinner5"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="50"

                        android:dropDownWidth="wrap_content"
                        android:dropDownHeight="500dp"
                        android:minWidth="400dp"
                        android:popupWindowStyle="@style/CustomPopupWindow"
                        android:spinnerDropDownItemStyle="@style/SpinnerItemStyle"

                        android:spinnerMode="dialog"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView"
                        app:layout_constraintVertical_bias="0.098" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text="XYZ"
                        app:layout_constraintTop_toBottomOf="@+id/textView15"
                        tools:layout_editor_absoluteX="0dp" />

                    <Spinner
                        android:id="@+id/spinner6"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="50"

                        android:dropDownWidth="wrap_content"
                        android:dropDownHeight="500dp"
                        android:minWidth="400dp"
                        android:popupWindowStyle="@style/CustomPopupWindow"
                        android:spinnerDropDownItemStyle="@style/SpinnerItemStyle"

                        android:spinnerMode="dialog"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView"
                        app:layout_constraintVertical_bias="0.098" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnPermission"
                    android:layout_width="0dp"
                    android:gravity="center"

                    android:layout_height="50dp"
                    android:layout_weight="50"

                    android:text="Запросить разрешение" />
            <TextView
                android:id="@+id/tvPermission"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="50"
                android:gravity="center"

                android:text="Разрешение не предоставлено" />




            </LinearLayout>
        </androidx.cardview.widget.CardView>




        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleRoundedCornerRadius="50dp"
        app:fabCradleMargin="8dp">
        <Button
            android:id="@+id/button2"
            android:layout_width="88dp"
            android:layout_height="80dp"

            android:enabled="false"
            android:text="»"

            tools:ignore="MissingConstraints" />
    </com.google.android.material.bottomappbar.BottomAppBar>



</androidx.coordinatorlayout.widget.CoordinatorLayout>