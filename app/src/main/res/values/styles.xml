<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Базовый стиль приложения -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Кастомный стиль для спиннеров -->
        <item name="android:spinnerStyle">@style/CustomSpinner</item>
    </style>

    <!-- Кастомный стиль для спиннеров -->

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownVerticalOffset">200dp</item>
        <item name="android:dropDownHorizontalOffset">150dp</item>
    </style>
    <style name="CustomPopupWindow" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:height">500dp</item>
    </style>
    <style name="SpinnerItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
    <item name="android:textSize">24sp</item></style>
</resources>